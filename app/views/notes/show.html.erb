<p id="notice"><%= notice %></p>

<h1>
  <%= @note.title %>
</h1>
<p>
    <% @note.tags.each do |tag| %>
     <div class = "tag.name" >
      <%= tag.name %>
     </div>
    <% end %>
</p>

<p>

  <%= to_reading(@note.content).html_safe %>
</p>



